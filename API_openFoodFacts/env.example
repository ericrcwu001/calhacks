# Environment variables for the Open Food Facts proxy API
# Copy this file to .env and modify as needed

# Server port (default: 8080)
PORT=8080

# Open Food Facts base URL (default: https://world.openfoodfacts.org)
OFF_BASE=https://world.openfoodfacts.org

# User agent for requests to Open Food Facts
USER_AGENT="off-proxy/1.0 (contact@example.com)"

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS="https://yourapp.creao.ai,http://localhost:5173,http://localhost:5174"
